<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="7dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:id="@+id/layout_bigItem"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:elevation="8dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:src="@drawable/ic_111"
                android:id="@+id/imvSP"
                android:layout_width="100dp"
                android:layout_height="match_parent"
              />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/cardView"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTenSP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="9dp"
                android:paddingStart="5dp"
                android:text="name"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLoaiSP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:paddingStart="5dp"
                android:text="type"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSoLuongSP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:paddingStart="5dp"
                android:text="So Luong"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvGiaSP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20.000vnd"
                android:textColor="#D20808"
                android:textSize="12dp"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/imvAddSP"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_margin="10dp"
        android:src="@drawable/ic_baseline_add_circle_24" />


</androidx.cardview.widget.CardView>